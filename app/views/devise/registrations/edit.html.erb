<h2>你好，<%= current_user.email %></h2>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="control">
      <%= f.label :username, "使用者名稱", class: "label" %>
      <%= f.text_field :username, class: "input" %>
      <p class="help">範例：@mymedium</p>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :avatar, "大頭照", class: "label" %>
      <%= f.file_field :avatar %>
    </div>
    <%= avatar(current_user) %>
  </div>
  
  <div class="field">
    <div class="control">
      <%= f.label :intro, "使用者簡介", class: "label" %>
      <%= f.text_area :intro, class: 'textarea', rows: '5' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :email, "帳號", class: "label" %>
      <%= f.email_field :email, autocomplete: "email", class: "input" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <div class="control">
      <%= f.label :password, "密碼", class: "label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
      <% if @minimum_password_length %>
        <p class="help">密碼至少 <%= @minimum_password_length %> 個字元，若不更改密碼，則不必填寫</p>
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '密碼確認', class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :current_password, '目前密碼', class: "label" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
    <p class="help">我們需要您目前的密碼，以確認您的變更</p>
  </div>
  <div class="actions">
    <%= f.submit "更新資料", class: "button is-primary" %>
    <%= link_to "回上一頁", :back, class: "button is-light" %>
  </div>
<% end %>

<br>
<p class="title">不喜歡嗎？</p>
<%= link_to "移除帳號", registration_path(resource_name), data: { confirm: "是否確認移除帳號？" }, method: :delete, class: "button is-danger" %>
<br>


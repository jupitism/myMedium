<h2>個人檔案 <%= current_user.email %></h2>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :帳號, class: "label" %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :密碼, class: "label" %>
    <i>（若不更改，請留空白）</i>
    
    <div class="control">
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    </div>

    <% if @minimum_password_length %>
      <em>至少 <%= @minimum_password_length %> 個字元</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '密碼確認', class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :current_password, '目前密碼', class: "label" %> <i>（我們需要您目前的密碼，以確認您的變更)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit "更新資料", class: "button is-primary" %>
    <%= link_to "返回首頁", :back, class: "button is-light" %>
  </div>
<% end %>

<br>
<p>不喜歡嗎？</p>
<%= link_to "移除帳號", registration_path(resource_name), data: { confirm: "是否確認移除帳號？" }, method: :delete, class: "button is-danger" %>



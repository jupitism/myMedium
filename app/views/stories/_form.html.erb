<%= form_for(story) do |form| %>
    <div class="field">
      <%= form.label :title, '文章標題' %>
      <%= form.text_field :title, class: 'input is-medium' %>
    </div>
    <div class="field">
      <%= form.label :content, '文章內容' %>
      <%= form.text_area :content, class: 'textarea', rows: '10' %>
    </div>
    <div class="field">
      <%= form.submit '儲存草稿', name: 'save_as_draft', class: 'button is-light'%>
      <%= form.submit '發佈文章', name: 'publish', class: 'button is-primary'%>
    </div>
  <% end %>
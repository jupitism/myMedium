<h1 class='title'>我的文章</h1>

<% @stories.each do |story| %>
  <div class="content">
    <h2 class='title'>
      <%= story.title %>
      <%= content_tag :span, '已發佈', class: 'tag is-primary' if story.published? %>
    </h2>
    <p><%= story.content %></p>
    <p>
      <em>最後編輯時間：<%= time_ago_in_words(story.updated_at) %> 前</em>
      <%= link_to '編輯', edit_story_path(story), class: 'button is-light is-small'%>
      <%= link_to '刪除', story_path(story), method: 'delete', class: 'button is-danger is-small', data: { confirm: '確認刪除？' } %>
    </p>
  </div>
  <hr>
<% end %>


